extends ../layouts/main.pug
block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Title
            th Author
            th Publisher
            th Genre
        
        tbody
          each book in books
            tr
              td
                a(href=`/books/${book.id}`)= book.title
              td= book.author
              td= book.publisher
              td= book.genre.name
              td
                a(href=`/books/${book.id}/edit`) edit
                = ` | `
                form.destroy(action=`/books/destroy`, method="POST", onsubmit='return confirm("Are you sure you wish to destroy this beautiful book?")')
                  input(type="hidden", name="id", value=`${book.id}`)
                  input.destroy(type="submit", value="destroy")
          
